<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_margin="@dimen/small_margin">
    <android.support.constraint.ConstraintLayout
        android:layout_margin="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.androidnetworking.widget.ANImageView
            android:id="@+id/photoANImageView"
            android:layout_width="352dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/photoANImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/default_margin"
            android:text="Sample Name"
            android:textStyle="bold"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fullNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin"
            android:text="Username"
            android:textAlignment="center" />
        <ImageView
            android:id="@+id/genderImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/usernameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/ic_launcher" />
        <!--
        <TextView
            android:id="@+id/foodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/default_margin"
            android:text="Food"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/routinesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/foodTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/default_margin"
            android:text="Routines"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"/>
            -->
        <ImageView
            android:id="@+id/routinesImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/genderImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_access_time_black_24dp"/>
        <ImageView
            android:id="@+id/foodImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/genderImageView"
            app:layout_constraintEnd_toStartOf="@id/routinesImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_kitchen_black_24px" />
        <TextView
            android:id="@+id/aboutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/default_margin"
            android:text="About"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>