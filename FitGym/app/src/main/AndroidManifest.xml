<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamgym.fitgym">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activitiesGeneral.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitiesGeneral.LoginGymCompanyActivity"
            android:label="@string/title_activity_login_gym_company"
            android:parentActivityName=".activitiesGeneral.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamgym.fitgym.activitiesGeneral.MainActivity" />
        </activity>
        <activity android:name=".activitiesGeneral.UserTypeActivity"
            android:label="User Type"/>
        <activity
            android:name=".activitiesGymCompany.RegisterGymCompanyActivity"
            android:label="@string/title_activity_register_gym_company"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>